{
  "extends": "../../tsconfig-tsec.json",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "ES2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "stripInternal": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "next/dist/compiled/*": ["node_modules/@types/*", "node_modules/*"],
      "next/dist/compiled/babel/*": [
        "node_modules/@types/babel__*",
        "node_modules/@babel/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "./*.d.ts",
    "future/*.d.ts",
    "image-types/global.d.ts",
    "compat/*.d.ts",
    "legacy/*.d.ts",
    "types/compiled.d.ts",
    "navigation-types/*.d.ts",
    "navigation-types/compat/*.d.ts",
    "experimental/**/*.d.ts"
  ]
}
